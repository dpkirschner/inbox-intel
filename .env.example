# Historical Data Configuration
BACKFILL_DAYS=365

# Application Configuration
DATA_DIR=data
LOG_LEVEL=INFO
WEBHOOK_PORT=8000

# Alert Configuration
ALERT_CATEGORIES=EARLY_CHECKIN,LATE_CHECKOUT,MAINTENANCE_ISSUE,SPECIAL_REQUEST
MIN_CONFIDENCE_THRESHOLD=0.7
